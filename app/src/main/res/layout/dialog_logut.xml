<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/logout_back"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/logout_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tizimdan chiqish"
        android:textColor="@color/black"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/logout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:layout_marginTop="8dp"
        android:text="Siz rostan ham tizimdan chiqmoqchimisiz?"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logout_submit"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="Chiqish"
            android:textColor="@color/cl_color_primary" />

        <TextView
            android:id="@+id/cancel_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:visibility="gone"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:focusable="true"
            android:padding="8dp"
            android:text="Bekor qilish"
            android:textColor="@color/cl_color_primary" />
    </LinearLayout>
</LinearLayout>